<?xml version="1.0" encoding="UTF-8"?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.productpage2.SearchController" hgap="10" vgap="10">
    <!-- Remove incorrect padding declaration -->
    <!-- Correct padding for GridPane -->
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
    </padding>

    <!-- Search Bar at the top -->
    <TextField fx:id="searchBar" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="1" promptText="Search..." prefWidth="400" />

    <!-- Buttons in the top right corner -->
    <HBox alignment="TOP_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="10">
        <Button text="Logout" fx:id="logoutButton" />
        <Button text="Add Items" fx:id="addItemsButton" />
    </HBox>
</GridPane>