<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cab302simplestock.controller.ViewGroupController">
   <children>
      <!-- Top Section with Group Name and Buttons -->
      <Text fx:id="groupText" layoutX="34.0" layoutY="46.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Viewing Group" />
      <Button layoutX="319.0" layoutY="30.0" mnemonicParsing="false" onAction="#onAddItemClick" text="Add item" />
      <Button layoutX="420.0" layoutY="30.0" mnemonicParsing="false" text="Log Out" />

      <!-- Search Field and Label -->
      <TextField fx:id="searchField" layoutX="156.0" layoutY="115.0" promptText="Search" />
      <Text layoutX="90.0" layoutY="130.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Search" />

      <!-- GridPane to display items -->
      <GridPane fx:id="itemGrid" hgap="10" layoutX="48.0" layoutY="146.0" prefHeight="211.0" prefWidth="458.0" vgap="10">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <!-- Rows will be dynamically populated -->
      </GridPane>
   </children>
</AnchorPane>
