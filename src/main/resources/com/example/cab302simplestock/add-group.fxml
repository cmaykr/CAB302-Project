<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cab302simplestock.controller.AddGroupController" stylesheets="@addNewGroup.css" style="-fx-background-color: #e6f7ff;">
   <children>
      <!-- Text for "Add Group" -->
      <Text fx:id="headerText" layoutX="250.0" layoutY="46.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Add New Group">
         <font>
            <Font size="18.0" />
         </font>
      </Text>

      <!-- Input for Group Name -->
      <Label layoutX="90.0" layoutY="100.0" text="Group Name:" />
      <TextField fx:id="groupNameField" layoutX="180.0" layoutY="95.0" prefWidth="300.0" />

      <!-- Add Group Button -->
      <Button layoutX="280.0" layoutY="150.0"  prefWidth="100" fx:id= "AddGroupButton" mnemonicParsing="false" onAction="#onAddGroupClick" text="Add Group" />

      <!-- Back Button -->
      <Button layoutX="34.0" layoutY="30.0" fx:id= "backButton" mnemonicParsing="false" text="Back" onAction="#onBackButtonClick"/>
   </children>
</AnchorPane>
