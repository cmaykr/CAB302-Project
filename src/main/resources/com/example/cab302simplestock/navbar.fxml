<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cab302simplestock.controller.NavBarController"
            prefHeight="400.0" prefWidth="600.0" stylesheets="@navbar.css">

    <!-- HBox as the Navbar, fully covering the width -->
    <HBox spacing="10.0" prefHeight="50.0"
          AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          styleClass="navbar" alignment="CENTER_LEFT"> <!-- Use styleClass to apply CSS -->
        <Button text="Home" fx:id="goHome" onAction="#goToHome" styleClass="navbar-button"/>
        <Button text="Categories" fx:id="goCategories" onAction="#goToCategories" styleClass="navbar-button"/>
        <Button text="Groups" fx:id="goGroups" onAction="#goToGroups" styleClass="navbar-button"/>
        <Button text="Accounts" fx:id="goAccounts" onAction="#goToAccounts" styleClass="navbar-button"/>
        <Button text="Settings" fx:id="goSettings" onAction="#goToSettings" styleClass="navbar-button"/>
        <Button text="Log Out" fx:id="logout" onAction="#logout" styleClass="navbar-button"/>
    </HBox>

</AnchorPane>