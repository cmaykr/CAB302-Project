<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.cab302simplestock.controller.SearchController" stylesheets="@style.css">

    <HBox>
        <fx:include source="navbar.fxml"/>
    </HBox>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="30.0" />
    </padding>

    <!-- Search Bar at the top -->
    <top>
        <VBox alignment="CENTER_LEFT" spacing="15">
            <Label fx:id="groupLabel" text="Selected Group: " style="-fx-font-weight: bold; -fx-font-size: 14px;-fx-background-color: lightgray; -fx-padding: 5px;" />
            <HBox alignment="CENTER_LEFT" spacing="15">

                <Region fx:id="spacer" HBox.hgrow="ALWAYS" />
                <Button fx:id="addItemsButton" onAction="#addItemsButton" text="Add Items" />
            </HBox>
        </VBox>
    </top>

    <!-- Center section with ListView -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <HBox alignment="CENTER" spacing="20">
                <TextField fx:id="searchBar" prefWidth="400" promptText="Search..." />
                <Button text = "Search" fx:id="searchButton" onAction="#searchButtonClick"></Button>
            </HBox>
            <ListView fx:id="itemsListView" prefHeight="200" />  <!-- This ListView displays item names -->
        </VBox>
    </center>
</BorderPane>
