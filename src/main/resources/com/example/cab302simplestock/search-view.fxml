<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.cab302simplestock.controller.SearchController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Search Bar at the top -->
    <top>
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="backButton" onAction="#backButtonClick" text="Back" />
            <Label fx:id="groupLabel" text="Selected Group: " />
            <Region fx:id="spacer" HBox.hgrow="ALWAYS" />
            <Button fx:id="addItemsButton" onAction="#addItemsButton" text="Add Items" />
            <Button fx:id="logoutButton" text="Logout" onAction="#logoutClicked"/>
        </HBox>

    </top>

    <!-- Center section with ListView -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <TextField fx:id="searchBar" prefWidth="400" promptText="Search..." />
            <ListView fx:id="itemsListView" prefHeight="200" />  <!-- This ListView displays item names -->
        </VBox>
    </center>
</BorderPane>
