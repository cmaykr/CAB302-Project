<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.cab302simplestock.controller.ForgottenpassController" spacing="10" alignment="CENTER">
    <TextField fx:id="emailField" promptText="Enter your email" />
    <Button text="Check Email" onAction="#onCheckEmail" />

    <Label fx:id="securityQuestionLabel" text="Security Question" visible="false" />
    <TextField fx:id="securityAnswer" promptText="Enter your answer" visible="false" />
    <Button text="Submit" onAction="#onSubmitAnswer" visible="false" />

    <!-- New password fields, initially hidden -->
    <Label fx:id="newPasswordLabel" text="New Password" visible="false" />
    <PasswordField fx:id="newPassword" promptText="Enter new password" visible="false" />
    <Label fx:id="confirmPasswordLabel" text="Confirm Password" visible="false" />
    <PasswordField fx:id="confirmPassword" promptText="Confirm new password" visible="false" />
    <Button fx:id="confirmButton" text="Confirm" onAction="#onResetPassword" visible="false" />
</VBox>
