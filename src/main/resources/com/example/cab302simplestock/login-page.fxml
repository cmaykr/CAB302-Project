<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.cab302simplestock.controller.LoginController">
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label>Login</Label>
            <TextField fx:id="username" promptText="Username" maxWidth="200"/>
            <PasswordField fx:id="password" promptText="Password" maxWidth="200"/>
            <HBox alignment="CENTER" spacing="30">
                <Button text="Forgotten password?" onAction="#onForgottenPassword"/>
                <Button text="Submit" onAction="#onSubmit"/>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <VBox alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="10" left="10"/>
            </padding>
            <Button fx:id="createAccountButton" text="Create an Account" onAction="#onCreateAccount"/>
        </VBox>
    </bottom>
</BorderPane>
