<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.productpage.controller.MainController">
    <!-- Vertical Box for layout -->
    <VBox spacing="10" padding="10">
        <!-- Product List View -->
        <Label text="Products"/>
        <ListView fx:id="productsListView" prefHeight="150" prefWidth="500"/>

        <!-- Form to edit product details -->
        <GridPane hgap="10" vgap="10">
            <Label text="Product Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="productNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Product Type:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="productTypeTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="productDescriptionTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Location:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="productLocationTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="Quantity:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="quantityTextField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <Label text="Insured:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <TextField fx:id="insuredField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

            <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
            <TextField fx:id="priceTextField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        </GridPane>

        <!-- Buttons for actions -->
        <HBox spacing="10">
            <Button text="Add" onAction="#onAdd"/>
            <Button text="Delete" onAction="#onDelete"/>
            <Button text="Edit" onAction="#onEditConfirm"/>
            <Button text="Cancel" onAction="#onCancel"/>
        </HBox>
    </VBox>
</AnchorPane>